{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Items (launch)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/services/items/cmd/server",
      "cwd": "${workspaceFolder}",
      "env": {
        "ITEMS_DB_URL": "postgres://postgres:postgres@localhost:5432/items?sslmode=disable",
        "PORT": "8081"
      }
    },
    {
      "name": "CRM (launch)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/services/crm/cmd/server",
      "cwd": "${workspaceFolder}",
      "env": {
        "CRM_DB_URL": "postgres://postgres:postgres@localhost:5432/crm?sslmode=disable",
        "PORT": "8082"
      }
    }
  ],
  "compounds": [
    {
      "name": "Run both: items + crm",
      "configurations": ["Items (launch)", "CRM (launch)"]
    }
  ]
}