{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run server (go run .)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/services/inventory-svc/cmd/server/main.go",
      "cwd": "${workspaceFolder}",
      "args": [],
      "env": {
        // при желании: "PORT": "8080"
      }
    },
    {
      "name": "Debug main.go (single file)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/services/inventory-svc/cmd/server/main.go",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Test app package",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${workspaceFolder}/app",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Attach to process (local)",
      "type": "go",
      "request": "attach",
      "mode": "local",
      "processId": "${command:pickProcess}",
      "cwd": "${workspaceFolder}"
    }
  ]
}